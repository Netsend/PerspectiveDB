# master process
user: _pdbnull
group: _pdbnull
chroot: /var/empty
log: {
  console: true
  level: debug
  file: /var/log/persdb.log
  error: /var/log/persdb-error.log
}

# db processes
dbs: [
  {
    name: mydb
    user: pdblevel
    group: pdblevel
    chroot: /srv/persdb/mydb
    perspectives: [{
      name: "john"
      passdb: "passwd.hjson"
      import: true
      export: true
    }]
  }
]

