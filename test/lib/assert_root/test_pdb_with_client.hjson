# PersDB settings.

# The strategy used for options in default.hjson shipped with PersDB is
# to specify options with their default value where possible, but leave them
# commented. Uncommented options override the default value.

# Main

#user: _pdbnull
#group: _pdbnull
#chroot: /var/empty

log: {
  console: true
  level: debug2
}

# Milliseconds between auto processing items
autoProcessInterval: 100

# DBs

dbs: [{
  name: someDb
  chroot: /var/pdb
  path: /test_pdb_root
  mergeTree: {
    vSize: 3,
  },
  perspectives: [
    {
      name: joe
      passdb: passdb.hjson
      export: true
    }
  ]
}, {
  name: otherDb
  chroot: /var/pdb
  path: /test_pdb_root2
  mergeTree: {
    vSize: 3,
  },
  perspectives: [
    {
      name: otherClient
      username: joe
      database: someDb
      secrets: secrets.hjson
      port: 1234
      import: true
    }
  ]
}]

port: 1234
