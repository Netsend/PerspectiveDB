# PersDB settings.

# make sure a test mongodb is running

# Main

#user: _pdbnull
#group: _pdbnull
#chroot: /var/empty

log: {
  console: true
  level: debug
}

# DBs

dbs: [{
  name: someDb
  chroot: /var/pdb
  path: /test1_pdb_mongo_root
  mergeTree: {
    vSize: 3
    autoMergeInterval: 1000  # Milliseconds between auto processing items
  },
  source: {
    oplogTransformOpts: {
      awaitData: false // speedup tests
    },
    url: mongodb://127.0.0.1:27019/pdb
    coll: test1
    #dbUser: bar
    #oplogDbUser: bar
    #passdb: "secrets.hjson"
  },
  perspectives: [
    {
      name: someClient
      passdb: secrets.hjson
      import: true
      export: true
      tailRetry: 400
    }
  ]
}]

port: 1234
