# PerspectiveDB settings.

# make sure a test mongodb is running

# Main

#user: _pdbnull
#group: _pdbnull
#chroot: /var/empty
dbroot: /var/pdb/test

log: {
  console: true
  level: debug2
}

# DBs

dbs: [{
  name: test1_pdb_source_mongo
  mergeTree: {
    vSize: 3
    autoMergeInterval: 1000  # Milliseconds between auto processing items
  },
  source: {
    url: mongodb://127.0.0.1:27019/pdb
    collections: test1
    #dbUser: bar
    #oplogDbUser: bar
    #passdb: "secrets.hjson"
  },
  perspectives: [
    {
      name: someClient
      passdb: secrets.hjson
      import: true
      export: true
    }
  ]
}]

port: 1234
